---
const horario = {
  lunesSabado: {
    mañana: "9:00 a.m - 1:15 p.m",
    tarde: "2:15 p.m - 7:00 p.m",
  },
  domingosFestivos: "10:00 p.m - 6:00 p.m",
  contacto: {
    telefono: "320 9411321",
    emergencia: "Servicio de Urgencias 24 Horas",
  },
};
---

<div class="flex flex-col md:flex-row h-72">
  <!-- Sección izquierda: Imagen -->
  <div class="w-full">
    <img
      src="./FondoHA.jpg"
      alt="Perrito siendo atendido"
      class="w-full h-full object-cover"
    />
  </div>

  <!-- Sección derecha: Horarios con fondo de huellas -->
  <div class="flex flex-col md:flex-row shadow-lg overflow-hidden w-full">
    <div
      class="w-full relative p-16 flex flex-col justify-center items-center text-black"
      style="background-image: url('./FondoHuellas1.png'); background-size: cover;"
    >
      <!-- Fondo azul con opacidad -->
      <div class="absolute inset-0 bg-teal-500 opacity-85 z-0"></div>

      <!-- Contenido -->
      <div class="relative z-10 grid grid-cols-2 gap-8 items-start w-full">
        <!-- Título centrado en todo el contenedor -->
        <h2 class="text-3xl font-bold text-center col-span-2">
          Horario de Atención
        </h2>

        <!-- Columna izquierda -->
        <div class="flex flex-col space-y-4">
          <!-- Lunes a Sábado -->
          <div>
            <p class="text-red-600 font-bold text-xl mb-2">Lunes a Sabado</p>
            <p>{horario.lunesSabado.mañana}</p>
            <p>{horario.lunesSabado.tarde}</p>
          </div>

          <!-- Domingos y Festivos -->
          <div>
            <p class="text-red-600 font-bold text-xl mb-2">
              Domingos y Festivos
            </p>
            <p>{horario.domingosFestivos}</p>
          </div>
        </div>

        <!-- Columna derecha -->
        <div class="relative flex flex-col space-y-4 items-center">
          <!-- Emergencias -->
          <div class="flex items-center space-x-2">
            <img
              src="./relojvet.png"
              alt="Icono reloj"
              class="size-16 absolute left-40 bottom-[7.2rem] min-[1600px]:bottom-[5.5rem]"
            />
            <p class="text-red-600 font-bold text-xl">
              {horario.contacto.emergencia}
            </p>
          </div>

          <!-- Teléfono -->
          <div class="flex items-center space-x-2">
            <svg
              xmlns="http://www.w3.org/2000/svg"
              width="24"
              height="24"
              viewBox="0 0 24 24"
              fill="none"
              stroke="currentColor"
              stroke-width="2"
              stroke-linecap="round"
              stroke-linejoin="round"
              class="icon icon-tabler icons-tabler-outline icon-tabler-phone"
              ><path stroke="none" d="M0 0h24v24H0z" fill="none"></path><path
                d="M5 4h4l2 5l-2.5 1.5a11 11 0 0 0 5 5l1.5 -2.5l5 2v4a2 2 0 0 1 -2 2a16 16 0 0 1 -15 -15a2 2 0 0 1 2 -2"
              ></path></svg
            >
            <p class="text-xl">{horario.contacto.telefono}</p>
          </div>
        </div>
      </div>
    </div>
  </div>
</div>
