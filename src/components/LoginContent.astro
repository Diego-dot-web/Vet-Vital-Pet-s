<div class="grid grid-cols-2 gap-4">
  <div
    class="flex flex-col justify-center items-center"
    transition:name="formulary"
  >
    <a href="#">
      <img
        src="./Logo.webp"
        alt="VitalPet's Clinica Logo"
        class="size-28 mb-4"
      />
    </a>
    <img src="./Logo2.webp" alt="VitalPet's Clinica Logo" class="w-40 mb-4" />
    <div class="flex flex-col justify-center items-center">
      <form action="/api/login" method="post" class="flex flex-col justify-center items-center">
        <input
          type="email"
          placeholder=" Email"
          name="email"
          required
          class="w-80 text-sm p-2 mt-2 mb-4 border-2 border-teal-500 rounded"
        />
        <input
          type="password"
          placeholder=" Contraseña"
          name="password"
          required
          class="w-80 text-sm p-2 mb-2 border-2 border-teal-500 rounded"
        />
        <p class="w-full text-right text-xs mt-2 mb-5">
          <a href="#" class="text-teal-500 hover:text-teal-600"
            >¿Olvidaste tu contraseña?</a
          >
        </p>
        <button
          class="bg-teal-500 hover:bg-teal-600 text-white py-2 px-5 w-full rounded-full"
          >Iniciar Sesión</button
        >
      </form>
      <p class="text-xs mt-5">
        ¿No tienes cuenta? <a
          href="/sign-up"
          class="text-teal-500 hover:text-teal-600"
        >
          Registrate</a
        >
      </p>
    </div>
  </div>
  <div class="w-full h-screen">
    <div class="relative h-full w-full">
      <img
        src="./LoginImg.webp"
        alt="VitalPet's Clinica Logo"
        class="absolute top-0 left-0 size-full object-cover"
      />
    </div>
  </div>
</div>
